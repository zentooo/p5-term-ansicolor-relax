This is Perl module Term::ANSIColor::Relax.

USAGE

use Term::ANSIColor::Relax;
use feature qw/say/;

say "I"->green;
say "love"->magenta->bold->underscore;
say "you"->white->on_blue;

my $timtoady = <<'TIMTOADY';
#####  ###  #    #  #####   ###     #    ####   #   #  
  #     #   ##  ##    #    #   #   # #   #   #  #   #  
  #     #   # ## #    #    #   #  #   #  #   #   # #   
  #     #   #    #    #    #   #  #####  #   #    #    
  #     #   #    #    #    #   #  #   #  #   #    #    
  #    ###  #    #    #     ###   #   #  ####     #    
TIMTOADY

say $timtoady->rainbow;
